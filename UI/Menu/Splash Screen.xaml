             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="800">
    <Grid x:Name="SplashRoot" Background="White">
        <Label x:Name="label" Content="Sales &amp; Inventory Management System" HorizontalAlignment="Left" Margin="73,146,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
