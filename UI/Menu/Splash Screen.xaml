        <Label x:Name="progressStatusLabel" Content="Status:" HorizontalAlignment="Left" Margin="162,269,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <Label x:Name="progressStatusIndicatorLabel" Content="Status:" HorizontalAlignment="Left" Margin="249,269,0,0" VerticalAlignment="Top" FontSize="24"/>

    </Grid>
